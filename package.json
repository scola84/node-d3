{
  "name": "@scola/d3",
  "version": "4.8.2",
  "description": "Global D3",
  "repository": "github:scola84/node-d3",
  "author": "M.C. van den Boogaart <scola@kvdb.name>",
  "license": "MIT",
  "main": "./dist/d3.js",
  "jsnext:main": "./index.js",
  "dependencies": {
    "@scola/d3-app": "^2.0.13",
    "@scola/d3-control": "^1.1.2",
    "@scola/d3-gesture": "^1.2.2",
    "@scola/d3-graph": "^2.0.10",
    "@scola/d3-helper": "^2.0.0",
    "@scola/d3-i18n": "^2.0.0",
    "@scola/d3-list": "^3.1.2",
    "@scola/d3-media": "^2.0.1",
    "@scola/d3-model": "^3.1.1",
    "@scola/d3-panel": "^3.0.7",
    "@scola/d3-pop": "^2.1.3",
    "@scola/d3-router": "^4.1.1",
    "@scola/d3-scroller": "^2.0.5",
    "@scola/d3-slider": "^2.0.4",
    "@scola/d3-tab": "^3.1.1",
    "@scola/d3-table": "^3.0.6",
    "d3-selection-multi": "^1.0.1"
  },
  "devDependencies": {
    "clean-css-cli": "^4.1.3",
    "rollup": "^0.41.6",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-css-only": "^0.2.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-watch": "^3.2.2",
    "uglify-js": "^3.0.9"
  },
  "scripts": {
    "build": "npm run prepare && npm run rollup --",
    "build:dev": "npm run gzip:pre && npm run build -- -w -m",
    "build:min": "npm run build:pub && npm run gzip",
    "build:pub": "npm run build && npm run min && npm run gzip:pre",
    "gzip": "gzip -9 -fkr dist/*",
    "gzip:pre": "find dist/ -name '*.gz' -delete",
    "link": "npm link @scola/d3-app @scola/d3-control @scola/d3-gesture @scola/d3-graph @scola/d3-helper @scola/d3-i18n @scola/d3-list @scola/d3-media @scola/d3-model @scola/d3-panel @scola/d3-pop @scola/d3-router @scola/d3-scroller @scola/d3-slider @scola/d3-tab @scola/d3-table @scola/error @scola/i18n",
    "min": "npm run min:js && npm run min:css",
    "min:js": "uglifyjs dist/d3.js -m -o dist/d3.min.js",
    "min:css": "cleancss --skip-rebase dist/d3.css -o dist/d3.min.css",
    "prepare": "mkdir -p dist/ && find dist/ -name '*.map' -delete",
    "prepublish": "npm run build:pub",
    "rollup": "rollup -c"
  }
}
