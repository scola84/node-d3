{
  "name": "@scola/d3",
  "version": "5.0.0",
  "description": "Global D3",
  "repository": "github:scola84/node-d3",
  "author": "M.C. van den Boogaart <scola@kvdb.name>",
  "license": "MIT",
  "main": "./dist/d3.js",
  "jsnext:main": "./index.js",
  "dependencies": {
    "@scola/d3-app": "^2.0.14",
    "@scola/d3-control": "^2.0.0",
    "@scola/d3-gesture": "^1.2.3",
    "@scola/d3-graph": "^2.0.11",
    "@scola/d3-helper": "^3.0.0",
    "@scola/d3-i18n": "^3.0.0",
    "@scola/d3-list": "^4.0.0",
    "@scola/d3-media": "^2.0.2",
    "@scola/d3-model": "^4.0.0",
    "@scola/d3-osm": "^1.0.0",
    "@scola/d3-panel": "^3.0.8",
    "@scola/d3-pop": "^3.0.0",
    "@scola/d3-router": "^5.0.0",
    "@scola/d3-scroller": "^3.0.0",
    "@scola/d3-slider": "^2.0.5",
    "@scola/d3-tab": "^3.1.2",
    "@scola/d3-table": "^3.1.0",
    "d3-selection-multi": "^1.0.1"
  },
  "devDependencies": {
    "clean-css-cli": "^4.1.6",
    "rollup": "^0.45.2",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-css-only": "^0.2.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-watch": "^4.3.1",
    "uglify-js": "^3.0.27"
  },
  "scripts": {
    "build": "npm run prepare && npm run rollup --",
    "build:dev": "npm run gzip:pre && npm run build -- -w -m",
    "build:min": "npm run build:pub && npm run gzip",
    "build:pub": "npm run build && npm run min && npm run gzip:pre",
    "gzip": "gzip -9 -fkr dist/*",
    "gzip:pre": "find dist/ -name '*.gz' -delete",
    "link": "npm run unlink && npm run link:scola",
    "link:scola": "ln -s $LINK/@scola node_modules/@scola",
    "min": "npm run min:js && npm run min:css",
    "min:js": "uglifyjs dist/d3.js -m -o dist/d3.min.js",
    "min:css": "cleancss --skip-rebase dist/d3.css -o dist/d3.min.css",
    "prepare": "mkdir -p dist/ && find dist/ -name '*.map' -delete",
    "prepublish": "npm run build:pub",
    "rollup": "rollup -c",
    "unlink": "rm -rf node_modules/@scola"
  }
}
